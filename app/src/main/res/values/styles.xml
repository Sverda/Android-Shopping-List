<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blue_700</item>
    </style>

    <style name="AppTheme.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Widget.ShoppingList.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.ShoppingList.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>