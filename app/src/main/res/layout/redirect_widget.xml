<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.ShoppingList.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.ShoppingList"
    android:layout_margin="0dp"
    android:padding="0dp">

    <ImageView
        android:id="@+id/widget_background"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sample"
        android:alpha="0.7"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <TextView
            android:id="@+id/widget_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="www.google.pl" />
        <Button
            android:id="@+id/widget_redirect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="@color/blue_500"
            android:alpha="0.9"
            android:textColor="@color/white"
            android:text="Redirect"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Currently playing: " />
            <TextView
                android:id="@+id/widget_ambient_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Scott Holmes Music - Lasting Memories.mp3" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>